pipeline{
     agent any
     stages{
            stage('validate')
             { 
                steps {
                echo "checking for pom.xml file"
                  sh "mvn validate"
                  }
                }
                  stage('build')
                     {
                        steps {
                                sh "mvn clean package"
                              }
                           }
                    stage('jar file')
                     {
                        steps {
                         sh "java -jar target/MavenProject0.0.3-SNAPSHOT.jar"
                            }
                       }
               }
       }

                        
